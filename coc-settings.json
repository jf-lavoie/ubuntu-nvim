{
  "tsserver.npm": "$NVM_BIN/npm",
  "tsserver.enableJavascript": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": false,
  "diagnostic.enable": false,
  "diagnostic.displayByAle": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
