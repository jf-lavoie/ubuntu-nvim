    "terraform-ls": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {
        "rootModulePaths": ["/mnt/c/Users/jflavoie/.genvid/terraform/"]
      },
      "settings": {}
    }
  },
  "yaml.schemas": {
    "kubernetes": "/**/*.yaml"
  }
}
